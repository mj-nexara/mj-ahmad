APP_NAME="gs"
VERSION="1.0.0"
SNAP_FILE="${APP_NAME}_${VERSION}_amd64.snap"
LOG_PATH="../logs/install.log"
BRAND="Nexara"
BORDER="â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"

echo ""
